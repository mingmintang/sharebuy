<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".GroupFragment">

    <!-- TODO: Update blank fragment layout -->

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <Button
            android:id="@+id/group_join"
            android:layout_width="55dp"
            android:layout_height="40dp"
            android:layout_marginEnd="4dp"
            android:text="加入"
            app:layout_constraintEnd_toStartOf="@+id/group_add"
            app:layout_constraintTop_toTopOf="@+id/group_add" />

        <Button
            android:id="@+id/group_add"
            android:layout_width="55dp"
            android:layout_height="40dp"
            android:layout_marginEnd="4dp"
            android:text="新增"
            app:layout_constraintEnd_toStartOf="@+id/group_exit"
            app:layout_constraintTop_toTopOf="@+id/group_exit" />

        <Button
            android:id="@+id/group_exit"
            android:layout_width="55dp"
            android:layout_height="40dp"
            android:layout_marginEnd="4dp"
            android:text="退出"
            android:visibility="gone"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <Spinner
            android:id="@+id/group_spinner"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:layout_marginStart="4dp"
            app:layout_constraintBottom_toBottomOf="@+id/group_join"
            app:layout_constraintEnd_toStartOf="@+id/group_isPublic"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <android.support.v7.widget.RecyclerView
            android:id="@+id/group_recyclerView"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginTop="4dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/group_spinner">

        </android.support.v7.widget.RecyclerView>

        <Switch
            android:id="@+id/group_isPublic"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="4dp"
            android:layout_marginTop="6dp"
            android:text="可加人"
            app:layout_constraintEnd_toStartOf="@+id/group_join"
            app:layout_constraintTop_toTopOf="@+id/group_join" />

    </android.support.constraint.ConstraintLayout>
</FrameLayout>